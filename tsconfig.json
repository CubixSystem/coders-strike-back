{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "target": "ES6",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
